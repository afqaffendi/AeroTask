<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <ImageView
            android:id="@+id/ivProfilePic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp"
            android:src="@drawable/ic_face"
            app:strokeColor="#6200EE"
            app:strokeWidth="2dp"
            app:shapeAppearanceOverlay="@style/CircleImage"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tvProfileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Classmate"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvProfileEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="email@example.com"
            android:layout_marginBottom="24dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Contributions"
                    android:textSize="14sp"
                    android:textColor="#757575" />

                <TextView
                    android:id="@+id/tvTaskCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="#6200EE" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cvClassStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="16dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Currently Viewing Folder:"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCurrentClass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CLASS_NAME"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#00C853" />

                <Button
                    android:id="@+id/btnLeaveClass"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leave Class Folder"
                    android:textColor="#D32F2F"
                    android:layout_marginTop="8dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvJoinLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join a Class Folder"
            android:textStyle="bold"
            android:layout_marginTop="10dp" />

        <EditText
            android:id="@+id/etClassCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Class Code (e.g. BIO101)"
            android:inputType="textCapCharacters"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/btnSaveClassCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Class"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnSignOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:backgroundTint="#FF5252"
            android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>